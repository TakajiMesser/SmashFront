<UserControl x:Class="SmashFront.Views.Controls.Border"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmashFront.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Vertical">
        <Rectangle Name="Line" HorizontalAlignment="Stretch" Height="2" Fill="White"></Rectangle>

        <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
            <Rectangle Height="30" Width="30" Opacity="0.6" Stroke="White"></Rectangle>
            <TextBlock Margin="15,5,15,0" Opacity="0.6" FontSize="12" Foreground="White">Select</TextBlock>

            <Rectangle Height="30" Width="30" Opacity="0.6" Stroke="White"></Rectangle>
            <TextBlock Margin="15,5,15,0" Opacity="0.6" FontSize="12" Foreground="White">Back</TextBlock>
        </StackPanel>
    </StackPanel>
</UserControl>
